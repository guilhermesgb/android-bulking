<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/card_vertical_margin"
    android:layout_marginBottom="@dimen/card_vertical_margin"
    android:layout_marginStart="@dimen/card_horizontal_margin"
    android:layout_marginLeft="@dimen/card_horizontal_margin"
    android:layout_marginEnd="@dimen/card_horizontal_margin"
    android:layout_marginRight="@dimen/card_horizontal_margin"
    card_view:cardCornerRadius="4dp"
    app:elevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/guide_item_core"/>

        <TextView
            android:id="@+id/guide_item_schedulable_venue_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/guide_item_name"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_toStartOf="@id/guide_item_category"
            android:layout_toLeftOf="@id/guide_item_category"
            android:layout_alignBaseline="@id/guide_item_category"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:freezesText="true"
            android:padding="8dp"/>

        <include
            layout="@layout/guide_item_description"
            android:id="@+id/guide_item_short_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/guide_item_schedulable_venue_schedule"/>

        <include
            layout="@layout/guide_item_venue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/guide_item_short_description"/>

        <include
            layout="@layout/guide_item_venue_cost"
            android:id="@+id/guide_item_venue_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/guide_item_name"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="end"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>