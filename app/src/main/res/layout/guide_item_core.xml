<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/guide_item_cover"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:contentDescription="@string/cover_photo_description"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/guide_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="start"
        android:padding="8dp"
        android:textSize="26sp"
        android:textColor="@color/jfl_white"
        android:background="#8C000000"
        android:layout_alignBottom="@id/guide_item_cover"/>

    <Button
        android:id="@+id/guide_item_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/guide_item_name"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>

</merge>